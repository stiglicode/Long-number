{
	"compilerOptions": {
		"target": "es3",
		"module": "AMD",
		"declaration": false,
		"noImplicitAny": true,
		"removeComments": true,
		"preserveConstEnums": true,
		"suppressImplicitAnyIndexErrors": true,
		// "sourceMap": true,
		"moduleResolution": "node",
		"watch": true
	},
	"include": ["src/index.ts"],
	"exclude": ["node_modules", "**/*.spec.ts"]
}
